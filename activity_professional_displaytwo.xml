<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lbluebg"
    tools:context=".ProfessionalDisplaytwo">

    <TextView
        android:id="@+id/idtv"
        android:layout_width="101dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/enddtv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"
        android:text="Id :"
        android:textAlignment="textEnd"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/enddtv"
        android:layout_width="117dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/startdtv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="162dp"
        android:text="End Date :"
        android:textAlignment="textEnd"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/startdtv"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/orgtv"
        android:layout_centerVertical="true"
        android:text="Start Date  :"
        android:textAlignment="textEnd"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/orgtv"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignEnd="@+id/designtv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        android:text="Organisation :"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/designtv"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/getdesigtv"
        android:layout_marginStart="47dp"
        android:text="Designation :"
        android:textAlignment="textEnd"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getidtv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/getdesigtv"
        android:layout_alignTop="@+id/idtv"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getenddtv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/getdesigtv"
        android:layout_alignTop="@+id/enddtv"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getstdtv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/getdesigtv"
        android:layout_alignTop="@+id/startdtv"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getloctv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/getdesigtv"
        android:layout_alignTop="@+id/loctv"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getorgtv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/getdesigtv"
        android:layout_alignTop="@+id/orgtv"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/getdesigtv"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="92dp"
        android:textAlignment="viewStart"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/proficon" />

</RelativeLayout>